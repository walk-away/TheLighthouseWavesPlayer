<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TheLighthouseWavesPlayerApp.MainPage"
             Title="The LighthouseWaves Player">

    <VerticalStackLayout Padding="10">
        <Label Text="Select a folder with MP3 files" FontSize="Medium" />
        <Button Text="Choose Folder" Clicked="OnChooseFolderClicked" />
        <CollectionView x:Name="AudioFilesList" SelectionMode="Single"
                        SelectionChanged="OnAudioFileSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}" FontSize="Small" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Spacing="10" VerticalOptions="End">
            <Button Text="Prev" Clicked="OnPrevTrackClicked" />
            <Button Text="Play" Clicked="OnPlayClicked" />
            <Button Text="Next" Clicked="OnNextTrackClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
