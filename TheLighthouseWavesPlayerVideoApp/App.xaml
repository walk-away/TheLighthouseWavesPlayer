<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:TheLighthouseWavesPlayerVideoApp.Converters"
             xmlns:global="clr-namespace:"
             x:Class="TheLighthouseWavesPlayerVideoApp.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <converters:BoolToHeightConverter x:Key="BoolToHeightConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <converters:BoolToSubtitleButtonColorConverter x:Key="BoolToSubtitleButtonColorConverter" />
            <converters:VolumeToIconConverter x:Key="VolumeToIconConverter" />
            <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
            <converters:BoolToHighlightOpacityConverter x:Key="BoolToHighlightOpacityConverter" />
            <converters:EnumEqualityConverter x:Key="EnumEqualityConverter" />
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
