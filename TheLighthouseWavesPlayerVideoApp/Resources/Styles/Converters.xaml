<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:converters="clr-namespace:TheLighthouseWavesPlayerVideoApp.Converters">

    <converters:BoolToFavoriteIconConverter x:Key="BoolToFavoriteIconConverter" />
    <converters:BoolToPlayPauseConverter x:Key="BoolToPlayPauseConverter" />
    <converters:BoolToColorConverter x:Key="BoolToColorConverter" 
                                     TrueColor="{StaticResource Primary}" 
                                     FalseColor="Transparent" />
    <converters:BoolToHeightConverter x:Key="BoolToHeightConverter" />
    <converters:DoubleToTimeSpanConverter x:Key="DoubleToTimeSpanConverter" />
    <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
    <converters:NotNullToBoolConverter x:Key="NotNullToBoolConverter" />
</ResourceDictionary>