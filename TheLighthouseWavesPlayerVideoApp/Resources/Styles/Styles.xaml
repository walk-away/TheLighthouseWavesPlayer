                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="LineHeight" Value="1.22" />
    </Style>

    <Style TargetType="Label" x:Key="HeadlineLarge">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="LineHeight" Value="1.25" />
    </Style>

    <Style TargetType="Label" x:Key="HeadlineMedium">
