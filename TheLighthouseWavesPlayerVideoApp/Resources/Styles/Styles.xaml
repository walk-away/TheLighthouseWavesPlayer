<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:TheLighthouseWavesPlayerVideoApp.Behaviors"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <!-- ==============================================
         ANIMATION RESOURCES
         ============================================== -->
    <x:Double x:Key="ScalePressed">0.96</x:Double>
    <x:Double x:Key="ScaleHover">1.02</x:Double>
    <x:Double x:Key="OpacityDisabled">0.38</x:Double>
    <x:Double x:Key="OpacityHover">0.92</x:Double>
    <x:Double x:Key="OpacityPressed">0.85</x:Double>

    <!-- ==============================================
         SPACING & SIZING
         ============================================== -->
    <x:Double x:Key="SpacingXSmall">4</x:Double>
    <x:Double x:Key="SpacingSmall">8</x:Double>
    <x:Double x:Key="SpacingMedium">16</x:Double>
    <x:Double x:Key="SpacingLarge">24</x:Double>
    <x:Double x:Key="SpacingXLarge">32</x:Double>

    <x:Double x:Key="CornerRadiusSmall">4</x:Double>
    <x:Double x:Key="CornerRadiusMedium">8</x:Double>
    <x:Double x:Key="CornerRadiusLarge">12</x:Double>
    <x:Double x:Key="CornerRadiusXLarge">16</x:Double>
    <x:Double x:Key="CornerRadiusFull">9999</x:Double>

    <x:Double x:Key="MinTouchTarget">44</x:Double>
    <x:Double x:Key="IconSizeSmall">16</x:Double>
    <x:Double x:Key="IconSizeMedium">24</x:Double>
    <x:Double x:Key="IconSizeLarge">32</x:Double>

    <!-- Thickness resources for margins -->
    <Thickness x:Key="MarginXSmall">0,4,0,0</Thickness>
    <Thickness x:Key="MarginSmall">0,8,0,0</Thickness>
    <Thickness x:Key="MarginMedium">0,16,0,0</Thickness>

    <!-- ==============================================
         SHADOW DEFINITIONS
         ============================================== -->
    <Shadow x:Key="ShadowElevation1"
            Brush="{StaticResource Shadow1}"
            Offset="0,1"
            Radius="2"
            Opacity="1" />

    <Shadow x:Key="ShadowElevation2"
            Brush="{StaticResource Shadow2}"
            Offset="0,2"
            Radius="4"
            Opacity="1" />

    <Shadow x:Key="ShadowElevation3"
            Brush="{StaticResource Shadow3}"
            Offset="0,4"
            Radius="8"
            Opacity="1" />

    <Shadow x:Key="ShadowElevation4"
            Brush="{StaticResource Shadow4}"
            Offset="0,8"
            Radius="16"
            Opacity="1" />

    <Shadow x:Key="ShadowElevation5"
            Brush="{StaticResource Shadow5}"
            Offset="0,12"
            Radius="24"
            Opacity="1" />

    <!-- ==============================================
         BASE CONTROLS
         ============================================== -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style TargetType="Border">
        <Setter Property="Stroke"
                Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Background"
                Value="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}" />
        <Setter Property="Shadow" Value="{StaticResource ShadowElevation1}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
        <Setter Property="Shadow" Value="{StaticResource ShadowElevation2}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1" />
                            <Setter Property="Opacity" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor"
                                    Value="{AppThemeBinding Light={StaticResource TextDisabled}, Dark={StaticResource Gray600}}" />
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}" />
                            <Setter Property="Opacity" Value="0.38" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.92" />
                            <Setter Property="Scale" Value="1.02" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.96" />
                            <Setter Property="Opacity" Value="0.85" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ==============================================
         BUTTON VARIANTS
         ============================================== -->
    <Style TargetType="Button" x:Key="FilledButton">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
        <Setter Property="Shadow" Value="{StaticResource ShadowElevation2}" />
    </Style>

    <Style TargetType="Button" x:Key="OutlineButton">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="Shadow" Value="{x:Null}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource HoverLight}, Dark={StaticResource HoverDark}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource PressedLight}, Dark={StaticResource PressedDark}}" />
                            <Setter Property="Scale" Value="0.96" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="TextButton">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Shadow" Value="{x:Null}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource HoverLight}, Dark={StaticResource HoverDark}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource PressedLight}, Dark={StaticResource PressedDark}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="IconButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="CornerRadius" Value="9999" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="WidthRequest" Value="44" />
        <Setter Property="Shadow" Value="{x:Null}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource HoverLight}, Dark={StaticResource HoverDark}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource PressedLight}, Dark={StaticResource PressedDark}}" />
                            <Setter Property="Scale" Value="0.96" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ==============================================
         INPUT CONTROLS
         ============================================== -->
    <Style TargetType="Entry">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource SurfaceVariant}, Dark={StaticResource SurfaceVariantDark}}" />
        <Setter Property="PlaceholderColor"
                Value="{AppThemeBinding Light={StaticResource TextHint}, Dark={StaticResource TextHintDark}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="Margin" Value="0,4,0,0" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor"
                                    Value="{AppThemeBinding Light={StaticResource TextDisabled}, Dark={StaticResource Gray600}}" />
                            <Setter Property="Opacity" Value="0.38" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="SearchBar">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="PlaceholderColor"
                Value="{AppThemeBinding Light={StaticResource TextHint}, Dark={StaticResource TextHintDark}}" />
        <Setter Property="CancelButtonColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource SurfaceVariant}, Dark={StaticResource SurfaceVariantDark}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,4,0,0" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="TitleColor"
                Value="{AppThemeBinding Light={StaticResource TextHint}, Dark={StaticResource TextHintDark}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="PlaceholderColor"
                Value="{AppThemeBinding Light={StaticResource TextHint}, Dark={StaticResource TextHintDark}}" />
    </Style>

    <!-- ==============================================
         SELECTION CONTROLS
         ============================================== -->
    <Style TargetType="CheckBox">
        <Setter Property="Color"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="ThumbColor" Value="{StaticResource White}" />
    </Style>

    <Style TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="MaximumTrackColor"
                Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}" />
        <Setter Property="ThumbColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
    </Style>

    <!-- ==============================================
     THEMED IMAGE BUTTON STYLE
     ============================================== -->
    <Style TargetType="ImageButton" x:Key="ThemedIconButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Aspect" Value="AspectFit" />
        <Setter Property="HeightRequest" Value="28" />
        <Setter Property="WidthRequest" Value="28" />
        <Setter Property="behaviors:TintBehavior.TintColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="1" />
                            <Setter Property="Scale" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.38" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource HoverLight}, Dark={StaticResource HoverDark}}" />
                            <Setter Property="Scale" Value="1.08" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.94" />
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource PressedLight}, Dark={StaticResource PressedDark}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ==============================================
         CONTAINERS
         ============================================== -->
    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}" />
        <Setter Property="Shadow" Value="{StaticResource ShadowElevation2}" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="SelectionMode" Value="Single" />
    </Style>

    <Style TargetType="RefreshView">
        <Setter Property="RefreshColor"
                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryAccent}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- ==============================================
         TYPOGRAPHY
         ============================================== -->
    <Style TargetType="Label">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style TargetType="Label" x:Key="DisplayLarge">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="FontSize" Value="57" />
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="LineHeight" Value="1.12" />
    </Style>

    <Style TargetType="Label" x:Key="DisplayMedium">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
        <Setter Property="FontSize" Value="45" />
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="LineHeight" Value="1.16" />
    </Style>

    <Style TargetType="Label" x:Key="DisplaySmall">
